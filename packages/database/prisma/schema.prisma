generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AuthType {
  Google
  Github
}

enum OnRampStatus {
  Success
  Failure
  Processing
}

enum Flow {
  Credit
  Debit
}

model User {
  id Int @id @default(autoincrement())
  email String? @unique
  name String?
  number String @unique
  password String
  onRampTransaction OnRampTransaction[]
  balance Balance[]
}

model Merchant {
  id Int @id @default(autoincrement())
  email String @unique
  name String?
  auth_type AuthType
}

model OnRampTransaction {
  id Int @id @default(autoincrement())
  status OnRampStatus
  token String
  provider String
  amount Int
  flow Flow
  startTime DateTime
  userId Int
  user User @relation(fields: [userId], references: [id])
}

model Balance {
  id Int @id @default(autoincrement())
  userId Int 
  amount Int
  locked Int
  user User @relation(fields: [userId], references: [id])
}